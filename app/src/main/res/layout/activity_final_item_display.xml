<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fin_display_background"
    tools:context=".FinalItemDisplay">

    <androidx.cardview.widget.CardView
        android:layout_width="365dp"
        android:layout_height="570dp"
        app:cardCornerRadius="40dp"
        app:layout_constraintVertical_bias="0.34"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imagei"
                android:layout_width="304dp"
                android:layout_height="198dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/veg_icon_fin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.491"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/namei"
                android:layout_width="243dp"
                android:layout_height="52dp"
                android:layout_marginBottom="284dp"
                android:text="Item name"
                android:textSize="40sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imagei"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/desi"
                android:layout_width="224dp"
                android:layout_height="45dp"
                android:layout_marginTop="4dp"

                android:text="Description"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.432"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/namei" />

            <ImageView
                android:id="@+id/nonvegi"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="140dp"
                android:layout_marginBottom="168dp"
                android:background="@drawable/nonveg_icon2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/vegi"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="72dp"
                android:layout_marginBottom="168dp"
                android:background="@drawable/veg_icon2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Spinner
                android:id="@+id/spinneri"
                android:layout_width="78dp"
                android:layout_height="45dp"
                android:layout_marginEnd="72dp"
                android:layout_marginBottom="152dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/addi"
                android:layout_width="267dp"
                android:layout_height="45dp"
                android:layout_marginBottom="88dp"
                android:background="@drawable/booking_button_background"
                android:text="Add to cart"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>