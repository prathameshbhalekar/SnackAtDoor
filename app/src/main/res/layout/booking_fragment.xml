<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <ImageView
        android:id="@+id/floor"
        android:layout_width="361dp"
        android:layout_height="516dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/floor_plan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/t4"
        android:layout_width="45dp"
        android:layout_height="42dp"
        android:layout_marginStart="120dp"

        android:layout_marginTop="36dp"
        android:text="4"
        app:layout_constraintStart_toStartOf="@+id/floor"
        app:layout_constraintTop_toBottomOf="@+id/t3" />

    <Button
        android:id="@+id/t2"
        android:layout_width="45dp"
        android:layout_height="42dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="28dp"
        android:text="2"
        app:layout_constraintStart_toStartOf="@+id/floor"
        app:layout_constraintTop_toBottomOf="@+id/t1" />

    <Button
        android:id="@+id/t5"
        android:layout_width="45dp"
        android:layout_height="42dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="20dp"
        android:text="5"
        app:layout_constraintStart_toStartOf="@+id/floor"
        app:layout_constraintTop_toBottomOf="@+id/t4" />

    <Button
        android:id="@+id/t1"
        android:layout_width="45dp"
        android:layout_height="42dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="112dp"
        android:text="1"
        app:layout_constraintStart_toStartOf="@+id/floor"
        app:layout_constraintTop_toTopOf="@+id/floor" />

    <Button
        android:id="@+id/t3"
        android:layout_width="45dp"
        android:layout_height="42dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="24dp"
        android:text="3"
        app:layout_constraintStart_toStartOf="@+id/floor"
        app:layout_constraintTop_toBottomOf="@+id/t2" />

    <ImageView
        android:layout_width="371dp"
        android:layout_height="156dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/booking_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Table No. : "
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="92dp"
        android:text="Capacity: "
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/book"
        android:layout_width="137dp"
        android:layout_height="40dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/booking_button_background"
        android:text="Book"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>